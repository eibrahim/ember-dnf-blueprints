<div class="row">
    <form class='col-md-12' {{action 'submitForgotPassword' on='submit' }}>
        <h2 class="form-signin-heading">Forgot Password</h2>
        {{#if forgotPasswordErrorMessage }}
        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span>
            {{forgotPasswordErrorMessage}}
        </div>
        {{/if}}
        <!--.-->
        {{#if showForgotPasswordSuccess }}
        <div class="alert alert-info" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only"></span> Check your email for instructions to reset
            your password
        </div>
        {{else}}
        <div class="form-group">
            <label>Email address</label>
            {{input value=forgotEmail type="email" class="form-control" placeholder="Email"
            disabled=isLoginDisabled}}
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit" disabled={{isForgotPasswordDisabled}}>Submit</button>
        {{/if}}
        <a class="btn btn-link " {{action 'hideForgotPassword'}}>Login</a>
    </form>
</div>
